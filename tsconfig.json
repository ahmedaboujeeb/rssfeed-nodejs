{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "module": "CommonJS",
    "outDir": "./dist",
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "types": [
      "node"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "src/typings/*.d.ts"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/**/*.ts"
  ]
}